<MainWindow>:
    pathToFile: pathR
    AnchorLayout:
        rows:3
        canvas:
            Color:
                rgba: 1,.5,.5,1
            Rectangle:
                pos: self.pos
                size: self.size
        FloatLayout:


            Label:
                text: "select the path to the file you want to chop"
            TextInput:
                on_text_validate: root.submit()
                font_size: 20
                size_hint: .4,.05
                pos_hint: {'x':.3 , 'y':.4 }
                id: pathR
                multiline: False
            Button:
                text: "..."
                size_hint: .05,.05
                pos_hint: {'x':.7 , 'y':.4 }
                on_release: root.pickFile()

            Button:
                pos_hint: {'right':1 , 'bottom':1 }
                text: "Submit"
                size_hint: .1, .1
                on_release: root.submit()

