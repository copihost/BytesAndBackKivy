<ThirdWindow>:
    startButton: startButton
    AnchorLayout:
        id: ALayout
        rows:3
        canvas:
            Color:
                rgba: 1,.5,.5,1
            Rectangle:
                pos: self.pos
                size: self.size
        FloatLayout:
            id:FLayout

            Label:
                text: "Press start to chop your file(may take a moment)"

            Button:
                id:startButton
                text: "START"
                size_hint: .2, .1
                pos_hint: {'x':.4 , 'y':.35 }
                on_release: root.unpackFile()
            Button:
                pos_hint: {'right':1 , 'bottom':1 }
                text: "Submit"
                size_hint: .1, .1
